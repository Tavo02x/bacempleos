@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutExterna.cshtml";
}

<div class="Panel LoginPanel" ng-controller="CambiarClaveController">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="LetrasTitulo textoNegrita"> Cambio de contraseña</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <input id="clave" type="password" ng-model="model.ClaveAnterior" placeholder="Contraseña anterior" />
            <span class="validate" ng-show="show1">Debe ingresar la contraseña anterior</span>
            <input id="password" type="password" ng-model="model.ClaveNueva" placeholder="Nueva contraseña" />
            <span class="validate" ng-show="show2">La nueva contraseña no debe ser igual a la anterior</span>
            <span class="validate" ng-show="show3">Debe ingresar una nueva contraseña</span>
            <input id="passwordConfirm" type="password" ng-model="model.ClaveConfirmar" placeholder="Confirmar contraseña" />
            <span class="validate" ng-show="show4">La contraseña no coincide</span>
            <span class="validate" ng-show="show5">Debe confirmar la contraseña</span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="botoneraCentrada">
                <input id="btnCambiarClave" ng-click="Cambiar()" type="button" class="btnPrincipal" value="Cambiar clave" />
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var SessionStatus = '@ViewBag.SessionState';
</script>
