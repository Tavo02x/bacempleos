
@{
    ViewBag.Title = "FiltrarPuestos";
}

<div ng-controller="VerPuestosController" ng-init="SeguridadJS();LoadGrid();AreaLaboralGet();getPaises();">
    <h1 class="subtitle-18 mb-5"><span class="mdi mdi-briefcase mdi-24px"></span>Puestos <span id="totalGrid"></span></h1>

    <div class="row">
        <div id="busqueda" class="col-md-7 col-xl-5">
            <div class="d-flex">
                <div class="bg-white px-3 d-flex mr-3 w-100">
                    <input class="border-0 my-2" id="textNombre" type="text" placeholder="Búsqueda por palabra clave" ng-model="model.nombre">
                    <button type="button" ng-click="Filter()"><span class="mdi mdi-magnify mdi-24px"></span></button>
                </div>
                <button class="btn-filters collapsed" type="button" data-toggle="collapse" data-target="#filtroAvanzado" aria-expanded="false" aria-controls="filtroAvanzado">
                    <span class="mdi mdi-tune mdi-24px"></span>
                </button>
            </div>
        </div>
        <div class="col-md-5 col-xl-7">
            <div class="float-md-right mt-3 mt-md-0">
                <button id="btnPublicar" type="button" class="btn" ng-click="redirect1()" >Crear Puesto</button>
            </div>
        </div>
    </div>
    <div class="Panel collapse" id="filtroAvanzado">
        <p class="subtitle-16">Filtrar por:</p>
        <div>
            <a data-toggle="collapse" data-target="#filtroAvanzado1" aria-expanded="false" aria-controls="filtroAvanzado1"> <div class="SubrayadoFiltroAvanzado LetrasContenido textoNegrita">País </div></a>
            <div class="collapse" id="filtroAvanzado1">
                <div id="chkPais" ng-repeat="pais in Paises">
                    <label class="container">
                        {{pais.Descripcion}}
                        <input type="checkbox" name="pais" value="{{pais.IdPais}}" id="{{pais.IdPais}}">
                        <span class="checkmark"></span>
                    </label>
                </div>
            </div>
        </div>
        <div>
            <a data-toggle="collapse" data-target="#filtroAvanzado2" aria-expanded="false" aria-controls="filtroAvanzado2"> <div class="SubrayadoFiltroAvanzado  LetrasContenido textoNegrita">Carrera </div></a>
            <div class="collapse" id="filtroAvanzado2">
                <div id="chkAreas" ng-repeat="area in Areas">
                    <label class="container">
                        {{area.Area}}
                        <input type="checkbox" name="areas" value="{{area.IdArea}}" id="{{area.IdArea}}">
                        <span class="checkmark"></span>
                    </label>
                </div>
            </div>
        </div>
        <div>
            <a data-toggle="collapse" data-target="#filtroAvanzado3" aria-expanded="false" aria-controls="filtroAvanzado3"> <div class="SubrayadoFiltroAvanzado  LetrasContenido textoNegrita">Estado </div></a>
            <div class="collapse" id="filtroAvanzado3">
                <label class="container">
                    Publicado
                    <input type="checkbox" value="true" name="publicado">
                    <span class="checkmark"></span>
                </label>
                <label class="container">
                    No Publicado
                    <input type="checkbox" value="false" name="publicado">
                    <span class="checkmark"></span>
                </label>
            </div>
        </div>
        <div class="mt-4 d-md-flex justify-content-center">
            <button id="btnFiltroAvanzado" data-toggle="collapse" data-target="#filtroAvanzado" aria-expanded="false" aria-controls="filtroAvanzado" class="btn mb-3 m-md-3" ng-click="Filter()" type="button">Aplicar Filtros</button>
            <button id="btnFiltroAvanzadoCancelar" data-toggle="collapse" data-target="#filtroAvanzado" aria-expanded="false" aria-controls="filtroAvanzado" class="btn btn-gray m-md-3" ng-click="ClearFilter()" type="button">Deshacer filtros</button>
        </div>
    </div>
    <div class="Panel">
        <div id="tablaPostulantes">

        </div>
    </div>
</div>

