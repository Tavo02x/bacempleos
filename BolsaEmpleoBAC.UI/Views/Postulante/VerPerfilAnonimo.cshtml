
@{
    ViewBag.Title = "MiPerfil";
    Layout = "~/Views/Shared/_LayoutExterna.cshtml";
}

<div ng-controller="VerPerfilAnonimoController" ng-init="getInfo();">
    <div>
        <img src="~/Content/Images/IconoPuestoNegro.png" alt="Puesto" class="iconoTitulo" />
        <h1 class="LetrasTitulo">Mi Perfil</h1>
    </div>
    <div class="Panel">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-4">
                        <img id="FotoPerfil" src="~/Content/Images/FondoPersona.png" class="FotoCircular" />
                    </div>
                    <div class="col-md-8">
                        <label id="lblNombreCompleto" class="LetrasTituloPrincipal">{{obj.NombreCompleto}}</label><br />
                        <label class="LetrasSubTitulo ColorLetraGris">{{obj.Email}}</label>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="botonera">
                    <input id="btnDescargarPerfil" type="button" class="btnPrincipal" ng-click="DescargarPerfil()" value="Descargar perfil" />
                </div>
            </div>
        </div>
        <div id="taps" class="row tapDistansce">
            <div id="StepOne" class="col-sm-2 tapSelect">Datos </div>
        </div>
        <div id="paso1" class="row" ng-show="StepOne">
            <div class="col-lg-4 Division">
                <h4 class="LetrasContenido">Información de contacto</h4>
                <label class="LetrasContenido">Correo:</label><br />
                <div class="col-lg-8"> <label class="LetrasContenido">{{obj.Email}}</label><br /></div>
                <label class="LetrasContenido">Teléfono:</label><br />
                <div class="col-lg-8"> <label class="LetrasContenido">{{obj.Telefono}}</label><br /></div>
                <label class="LetrasContenido">Residencia:</label><br />
                <div class="col-lg-8">
                    <label class="LetrasContenido">{{obj.PaisRecidencia}}</label><br />
                    <label class="LetrasContenido">{{obj.Zona1}}</label><br />
                    <label class="LetrasContenido">{{obj.Zona2}}</label><br />
                    <label class="LetrasContenido">{{obj.Zona3}}</label><br />
                </div>
            </div>
            <div class="col-lg-4 Division">
                <h4 class="LetrasContenido">Información personal</h4>
                <label class="LetrasContenido">Identificación:</label><br />
                <div class="col-lg-8"> <label class="LetrasContenido">{{obj.Identificacion}}</label><br /></div>
                <label class="LetrasContenido">Género:</label>
                <div class="col-lg-8"> <label class="LetrasContenido">{{obj.Genero}}</label><br /></div>
                <label class="LetrasContenido">Estado Civil:</label><br />
                <div class="col-lg-8"> <label class="LetrasContenido">{{obj.EstadoCivil}}</label><br /></div>
                <label class="LetrasContenido">Fecha nacimiento:</label><br />
                <div class="col-lg-8"> <label class="LetrasContenido">{{obj.FechaNacimiento}}</label><br /></div>
                <label class="LetrasContenido">Edad:</label><br />
                <div class="col-lg-8"> <label class="LetrasContenido">{{obj.Edad}}</label><br /></div>
                <label class="LetrasContenido">Nacionalidad:</label><br />
                <div class="col-lg-8"> <label class="LetrasContenido">{{obj.Nacionalidad}}</label><br /></div>
            </div>
            <div class="col-lg-4">
                <h4 class="LetrasContenido">Información adicional</h4>
                <label class="LetrasContenido">Vehículo:</label>
                <label class="LetrasContenido">{{obj.Vehiculo}}</label><br />
                <label class="LetrasContenido">Discapacidad:</label><br />
                <div id="divDiscapacidad" ng-repeat="discapacidad in obj.Discapacidades" class="col-lg-8">
                    <label class="LetrasContenido">{{discapacidad.Descripcion}}</label><br />
                </div>
                <label class="LetrasContenido">Curriculum:</label><br />
                <div class="col-lg-8"> <a class="LetrasContenido ColorLetraAzul" href="{{obj.CurriculumURL}}" target="_blank">Ver curriculum</a></div>
            </div>
        </div>
        <div id="taps" class="row tapDistansce">
            <div id="StepTwo" class="col-sm-2 tapSelect">Experiencia </div>
        </div>
        <div id="paso2" class="row" ng-show="StepTwo">
            <div class="col-lg-4 Division">
                <h1 class="LetrasContenido">Educación</h1>
                <label class="LetrasContenido">Máximo grado académico</label>
                <div class="col-lg-8">
                    <label class="LetrasContenido">{{obj.GradoAcademico}}</label>
                </div>
                <label class="LetrasContenido">Títulos y certificaciones</label>
                <div class="col-lg-8">
                    <label class="LetrasContenido" ng-repeat="grado in obj.TitulosCertificaciones">{{grado.GradoAcademico}}</label>
                </div>
            </div>
            <div class="col-lg-4 Division">
                <h1 class="LetrasContenido">Laboral</h1>
                <label class="LetrasContenido">Experiencia Laboral</label>
                <div ng-repeat="exp in obj.ExperienciaLaboral" class="col-lg-8">
                    <label class="LetrasContenido">Puesto: {{exp.Puesto}}</label><br />
                    <label class="LetrasContenido">Empresa: {{exp.Empresa}}</label><br />
                    <label class="LetrasContenido">Descripción del puesto: {{exp.DescripcionPuesto}}</label><br />
                </div>
                <label class="LetrasContenido">He trabajado en el BAC</label><br />
                <label class="LetrasContenido">{{obj.TrabajoBAC}}</label><br />
                <label class="LetrasContenido">Habilidades Blandas</label><br />
                <div ng-repeat="hab in obj.Habilidades" class="col-lg-8">
                    <label class="LetrasContenido">{{hab.Descripcion}}</label><br />
                </div>
            </div>
            <div class="col-lg-4">
                <h1 class="LetrasContenido">Referencias</h1>
                <label class="LetrasContenido">Sitios Referencia</label>
                <div ng-repeat="url in obj.Referencias" class="col-lg-8">
                    <label class="LetrasContenido">{{url.UrlReferencia}}</label><br />
                </div>
            </div>
        </div>
        <div id="taps" class="row tapDistansce">
            <div id="StepThree" class="col-sm-2 tapSelect">Intereses</div>
        </div>
        <div id="paso3" class="row" ng-show="StepThree">
            <div class="col-lg-4 Division">
                <label class="LetrasContenido">Idiomas:</label>
                <div ng-repeat="idioma in obj.Idiomas" class="col-lg-8">
                    <img src="~/Content/Images/IconoIdiomaRojo.png" class="icono-2" />
                    <label class="LetrasContenido">{{idioma.Descripcion}},{{idioma.Nivel}}</label><br />
                </div>
            </div>

            <div class="col-lg-4 Division">
                <label class="LetrasContenido">Quisiera trabajar en:</label>
                <div ng-repeat="area in obj.Areas" class="col-lg-8">
                    <label class="LetrasContenido">{{area.Area}}</label><br />
                </div>
                <label class="LetrasContenido">Quisiera trabajar en:</label>
                <div ng-repeat="pais in obj.Paises" class="col-lg-8">
                    <label class="LetrasContenido">{{pais.Descripcion}}</label><br />
                </div>
            </div>
        </div>

    </div>

</div>

@section scripts{
    <script src="~/Scripts/Logic/DescargarPerfil.js"></script>
}

@section scripts{

