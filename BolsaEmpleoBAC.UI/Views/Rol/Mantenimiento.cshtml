@{
    ViewBag.Title = "Mantenimiento roles";
}

<div ng-controller="RolController" ng-init="SeguridadJS();getAccion();">
    <h1 class="subtitle-18 mb-5"><span class="mdi mdi-settings mdi-24px"></span>Mantenimiento de Roles <span id="totalGrid"></span></h1>
    <div class="Panel">
        <div class="row">
            <div class="col-lg-3 Division">
                <div><h1 class="LetrasSubTitulo">Datos generales</h1></div>
                <input id="txtid" type="hidden" ng-model="model.IdRol" />
                <input id="txtNombre" type="text" placeholder="Nombre" ng-model="model.Descripcion" />
                <span class="validate" ng-show="show1">Por favor, introduzca el nombre del rol</span>
                <label class="container">
                    Desactivar
                    <input id="txtBorrado" type="checkbox" ng-value="modal.Borrado" ng-model="modal.Borrado">
                    <span class="checkmark"></span>
                </label>

                <label class="container">
                    Multipaís
                    <input id="txtBorrado" type="checkbox" ng-value="modal.Borrado" ng-model="modal.IsMultipais">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="col-lg-9">
                <div><h1 class="LetrasSubTitulo">Reglas de seguridad</h1></div>
                <span class="validate" ng-show="show2">Por favor, seleccione al menos una regla de seguridad</span>
                <div id="divAccion"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="botonera mt-3 mt-lg-0">
                <input id="btnCancelar" type="button" value="Cancelar" class="btnSecundario" data-dismiss="modal" ng-click="Cancelar()" />
                <input id="btnGuardar" type="button" value="guardar" class="btnPrincipal" ng-click="Guardar()" />
            </div>
        </div>
    </div>
</div>

