
@{
    ViewBag.Title = "Index";
}

<div ng-controller="PretensionSalarialController" ng-init="SeguridadJS();LoadGrid();GetMonedas();">
    <div class="d-md-flex justify-content-between align-items-center mb-5">
        <h1 class="subtitle-18"><span class="mdi mdi-settings mdi-24px"></span>Mantenimiento de Pretensiones Salariales <span id="totalGrid"></span></h1>
        <button type="button" class="btn" data-toggle="modal" data-target="#popupArea">Nueva Pretensión</button>
    </div>
    <div class="Panel">
        <div class="row">
            <div class="col-lg-12">
                <div id="table"></div>
            </div>
        </div>
    </div>
    <div id="popupArea" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="col-lg-1">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <label class="LetrasSubTitulo">Mantenimiento</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <input id="txtId" type="hidden" ng-model="model.IdPretension" />
                            <input id="txtNombre" type="text" placeholder="Nombre" class="LetrasContenido" ng-model="model.Descripcion" />
                        </div>
                        <div class="col-lg-6">
                            <select id="IdMoneda" ng-model="model.IdMoneda">
                                <option selected disabled value="">Moneda</option>
                                <option ng-repeat="moneda in monedas" value="{{moneda.IdMoneda}}" ng-value="{{moneda.IdMoneda}}">{{moneda.Descripcion}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <input id="txtMinimo" type="text" placeholder="Salario mínimo" class="LetrasContenido" ng-pattern="/^[0-9]+(\.[0-9]{1,2})?$/" step="0.01" ng-model="model.SalarioMinimo" />
                        </div>
                        <div class="col-lg-6">
                            <input id="txtMaximo" type="text" placeholder="Salario máximo" class="LetrasContenido" ng-pattern="/^[0-9]+(\.[0-9]{1,2})?$/" step="0.01" ng-model="model.SalarioMaximo" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label class="container">
                                Desactivar
                                <input id="txtBorrado" type="checkbox" ng-value="model.Borrado" ng-model="model.Borrado">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="col-lg-6">

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            @*<div class="botonera">*@
                            <input id="btnCancelar" type="button" value="Cancelar" class="btnSecundario" data-dismiss="modal" ng-click="Cancelar()" />
                            <input id="btnGuardar" type="button" value="guardar" class="btnPrincipal" ng-click="Guardar()" />
                            @*</div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

